import string

import numpy as np
import networkx

allNodelisty = []
listyInlisty = []
x ="Im gonna be an input"
deletable_number = 1
added_node = 0



G = networkx.Graph()

listy = []

while x:
    x = input("input ")


    if x == "done":
        break
    for a in x:
        listy.append(a)


    del listy[deletable_number]
    del listy[deletable_number]

    deletable_number +=2


    G.add_node(listy[added_node])
    G.add_node(listy[added_node+1])
    G.add_edge(listy[added_node], listy[added_node+1])

    added_node += 2


    #allNodelisty.append(listy[0])
    #allNodelisty.append(listy[1])
    #listyInlisty.append(listy)


# All the nodes and their names
node_listy = G.nodes()
print("These are the nodes: ")
print(node_listy)


edge_listy = G.edges()
print("all edges of our graph")
print(edge_listy)

numm = G.number_of_nodes()
print("number of nodes of our graph")
print(numm)

i= 0
while (i < numm):
    d = G.degree(listy[i])
    print("degree of ", listy[i])
    print(d)
    i += 1

j = 0

for node in node_listy:
    neighbor_listy = list(G.neighbors(node))
    print("neighbors of ",node, "is: " )
    print(neighbor_listy)
    j += 1


